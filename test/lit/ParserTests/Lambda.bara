// RUN: bara %s -ast-print | FileCheck %s


//===----------------------------------------------------------------------===//
/// empty parameter Lambda 
//===----------------------------------------------------------------------===//

var lambda = \ => 1;
var x = lambda();

// CHECK: var lambda = \ => 1;
// CHECK: var x = lambda();


//===----------------------------------------------------------------------===//
/// various parameter Lambda 
//===----------------------------------------------------------------------===//

var lambda2 = \a, b, c => a + b + c;
var y = lambda2(1, 2, 3);

// CHECK: var lambda2 = \a, b, c => a + b + c;
// CHECK: var y = lambda2(1, 2, 3);


//===----------------------------------------------------------------------===//
/// various parameter Lambda - 2 
//===----------------------------------------------------------------------===//

var lambda3 = \(a, b) => a + b;
var z = lambda3((1, 2));

// CHECK: var lambda3 = \(a, b) => a + b;
// CHECK: var z = lambda3((1, 2));


//===----------------------------------------------------------------------===//
/// various parameter Lambda - 3
//===----------------------------------------------------------------------===//

var lambda4 = \(a, b), (c, d) => a + b;
var z = lambda4((1, 2), (3, 4));

// CHECK: var lambda4 = \(a, b), (c, d) => a + b;
// CHECK: var z = lambda4((1, 2), (3, 4));
